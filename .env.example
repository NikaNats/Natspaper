# ========================================
# Environment Configuration Example
# ========================================
# Copy this file to .env and/or .env.production
# Fill in the actual values for your environment
# ========================================

# Site Configuration
# Domain/URL where the site will be deployed
SITE_WEBSITE=https://example.com/

# Google Site Verification (optional)
# Get this from Google Search Console
PUBLIC_GOOGLE_SITE_VERIFICATION=

# Environment-specific Settings
# NODE_ENV options: development, production, staging
NODE_ENV=production

# Build-time Variables (for Astro)
# These are baked into the build
BUILD_TIMESTAMP=
BUILD_VERSION=

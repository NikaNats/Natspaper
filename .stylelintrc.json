{
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "screen",
          "custom-variant",
          "utility",
          "theme",
          "plugin",
          "custom-media"
        ]
      }
    ],
    "no-descending-specificity": null,
    "selector-pseudo-element-no-unknown": true,
    "color-no-invalid-hex": true
  },
  "ignoreFiles": [
    "node_modules/",
    "dist/",
    ".astro/",
    "coverage/",
    "playwright-report/",
    "test-results/",
    "**/*.astro"
  ]
}

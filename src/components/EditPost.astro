---
// REFACTORED: No longer depends on specific Astro types or global config.
import IconEdit from "@/assets/icons/IconEdit.svg";

// REFACTORED: Props are now simple, primitive types.
// This component now knows nothing about "posts" or "SITE config".
export interface Props {
  href: string;
  text: string;
  class?: string;
}

const { href, text, class: className = "" } = Astro.props;
---

{
  /* REFACTORED: The conditional logic is gone.
// This component's only job is to render the link if it is told to. */
}
<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    "flex items-baseline gap-1.5 opacity-80 hover:text-accent",
    className,
  ]}
>
  <IconEdit class="inline-block" />
  <span>{text}</span>
</a>

---
import IconX from "@/assets/icons/IconX.svg";
import IconMoon from "@/assets/icons/IconMoon.svg";
import IconSearch from "@/assets/icons/IconSearch.svg";
import IconSunHigh from "@/assets/icons/IconSunHigh.svg";
import IconArchive from "@/assets/icons/IconArchive.svg";
import IconMenuDeep from "@/assets/icons/IconMenuDeep.svg";
import LinkButton from "./LinkButton.astro";
import LanguagePicker from "./LanguagePicker.astro";
import { SITE } from "@/config";

const { pathname } = Astro.url;

// Remove trailing slash from current pathname if exists
const currentPath =
  pathname.endsWith("/") && pathname !== "/" ? pathname.slice(0, -1) : pathname;

function isActive(path) {
  const currentPathArray = currentPath.split("/").filter(p => p.trim());
  const pathArray = path.split("/").filter(p => p.trim());

  // Compare paths, accounting for language prefix
  // For example: /en/posts should match /posts
  const currentPagePath = currentPathArray.slice(1); // Remove language code
  const checkPagePath = pathArray.slice(0); // The path to check

  if (
    currentPagePath.length === 0 &&
    checkPagePath.length === 1 &&
    checkPagePath[0] === "posts"
  ) {
    // Homepage (after language code) against /posts link
    return false;
  }

  return (
    currentPath === `/${Astro.currentLocale}${path}` ||
    currentPath === `/${Astro.currentLocale}${path}/` ||
    currentPagePath[0] === checkPagePath[0]
  );
}
---

<header>
  <a
    id="skip-to-content"
    href="#main-content"
    class="visually-hidden focus:absolute focus:start-4 focus:top-4 focus:z-50 focus:bg-background focus:p-3 focus:text-accent"
  >
    Skip to content
  </a>
  
  <!-- Centered container wrapper -->
  <div class="mx-auto flex max-w-app w-full items-center justify-between">
    <!-- Main navigation wrapper with improved spacing and border styling -->
    <nav
      id="top-nav-wrap"
      class="relative flex w-full h-16 items-center justify-between border-b border-border bg-background px-4 transition-colors sm:px-6 gap-4"
    >
      <!-- Logo/Brand: Positioned to the start (left) via flex justify-between parent -->
      <a
        href={`/${Astro.currentLocale}/`}
        class="shrink-0 font-sans text-lg font-bold text-foreground no-underline transition-colors hover:text-accent focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-background rounded-md"
        title="Home"
      >
        {SITE.title}
      </a>

      <!-- Navigation menu wrapper: Positioned to the end (right) via justify-between -->
      <div id="nav-menu" class="flex items-center gap-1 sm:gap-4">
        <!-- Mobile Menu Button (Hamburger) - hidden on sm and larger screens -->
        <button
          id="menu-btn"
          class="sm:hidden p-2 text-foreground transition-colors hover:text-accent rounded-md focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-background"
          aria-label="Open Menu"
          aria-expanded="false"
          aria-controls="menu-items"
        >
          <IconMenuDeep id="menu-icon" class="size-6" />
          <IconX id="close-icon" class="hidden size-6" />
        </button>

        <!-- Navigation menu items - transforms into mobile overlay on small screens -->
        <ul
          id="menu-items"
          class="absolute sm:relative top-16 left-0 right-0 sm:top-0 hidden sm:flex flex-col sm:flex-row items-center gap-3 bg-background sm:bg-transparent p-4 sm:p-0 border-b sm:border-none border-border shadow-md sm:shadow-none z-40"
        >
          <li>
            <!-- MODIFIED FOR SYMMETRY: Added flex, items-center, h-8 and removed vertical padding -->
            <a
              href={`/${Astro.currentLocale}/posts`}
              class:list={{
                "active-nav text-accent": isActive("/posts"),
              }}
              class="flex items-center h-8 px-2 font-sans text-sm font-medium transition-colors text-foreground hover:text-accent no-underline focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-background rounded"
            >
              Posts
            </a>
          </li>
          <li>
            <!-- MODIFIED FOR SYMMETRY: Added flex, items-center, h-8 and removed vertical padding -->
            <a
              href={`/${Astro.currentLocale}/tags`}
              class:list={{
                "active-nav text-accent": isActive("/tags"),
              }}
              class="flex items-center h-8 px-2 font-sans text-sm font-medium transition-colors text-foreground hover:text-accent no-underline focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-background rounded"
            >
              Tags
            </a>
          </li>
          {
            SITE.showArchives && (
              <li>
                <LinkButton
                  href={`/${Astro.currentLocale}/archives`}
                  class:list={[
                    "flex items-center justify-center p-1.5 text-foreground transition-colors hover:text-accent rounded-md focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-background",
                    { "active-nav text-accent": isActive("/archives") },
                  ]}
                  ariaLabel="archives"
                  title="Archives"
                >
                  <IconArchive class="size-5" />
                  <span class="sr-only">Archives</span>
                </LinkButton>
              </li>
            )
          }
          <li>
            <LinkButton
              href={`/${Astro.currentLocale}/search`}
              class:list={[
                "flex items-center justify-center p-1.5 text-foreground transition-colors hover:text-accent rounded-md focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-background",
                { "active-nav text-accent": isActive("/search") },
              ]}
              ariaLabel="search"
              title="Search"
            >
              <IconSearch class="size-5" />
              <span class="sr-only">Search</span>
            </LinkButton>
          </li>
          {
            SITE.lightAndDarkMode && (
              <li>
                <button
                  id="theme-btn"
                  class="inline-flex items-center justify-center p-1.5 text-foreground transition-colors hover:text-accent rounded-md focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-background"
                  title="Toggle light & dark theme"
                  aria-label="Toggle theme"
                  aria-live="polite"
                >
                  <IconMoon class="hidden size-5 dark:block" />
                  <IconSunHigh class="size-5 dark:hidden" />
                </button>
              </li>
            )
          }
          <li>
            <LanguagePicker />
          </li>
        </ul>
      </div>
    </nav>
  </div>
</header>

<script lang="ts" is:inline>
  function setupNavigation() {
    const menuBtn = document.querySelector("#menu-btn");
    const menuItems = document.querySelector("#menu-items");
    const menuIcon = document.querySelector("#menu-icon");
    const closeIcon = document.querySelector("#close-icon");

    if (!menuBtn || !menuItems || !menuIcon || !closeIcon) return;

    const toggleMenu = () => {
      const isOpen = menuBtn.getAttribute("aria-expanded") === "true";
      const newState = !isOpen;

      menuBtn.setAttribute("aria-expanded", String(newState));
      menuBtn.setAttribute("aria-label", newState ? "Close Menu" : "Open Menu");

      menuItems.classList.toggle("hidden", !newState);
      menuIcon.classList.toggle("hidden", newState);
      closeIcon.classList.toggle("hidden", !newState);
    };

    menuBtn.addEventListener("click", toggleMenu);

    // Close menu when a navigation item is clicked
    const navLinks = menuItems.querySelectorAll("a");
    navLinks.forEach((link) => {
      link.addEventListener("click", () => {
        if (menuBtn.getAttribute("aria-expanded") === "true") {
          toggleMenu();
        }
      });
    });
  }

  // Initialize on page load
  setupNavigation();

  // Reinitialize on view transitions
  document.addEventListener("astro:after-swap", setupNavigation);

  // --- ENHANCED THEME TOGGLE ---
  function setupThemeToggle() {
    const themeBtn = document.querySelector("#theme-btn");
    if (!themeBtn) return;

    const applyTheme = (theme) => {
      const isDark = theme === "dark";
      if (isDark) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
      localStorage.setItem("theme", theme);
    };

    // Detect current theme preference
    const getPreferredTheme = () => {
      const stored = localStorage.getItem("theme");
      if (stored) return stored;
      return window.matchMedia("(prefers-color-scheme: dark)").matches
        ? "dark"
        : "light";
    };

    // Apply theme on load
    const currentTheme = getPreferredTheme();
    applyTheme(currentTheme);

    // Toggle theme on button click
    themeBtn.addEventListener("click", () => {
      const isDarkNow = document.documentElement.classList.contains("dark");
      const newTheme = isDarkNow ? "light" : "dark";
      applyTheme(newTheme);
    });

    // Listen for system theme changes
    window
      .matchMedia("(prefers-color-scheme: dark)")
      .addEventListener("change", (e) => {
        if (!localStorage.getItem("theme")) {
          applyTheme(e.matches ? "dark" : "light");
        }
      });
  }

  setupThemeToggle();
  document.addEventListener("astro:after-swap", setupThemeToggle);
</script>
---
import IconX from "@/assets/icons/IconX.svg";
import IconMoon from "@/assets/icons/IconMoon.svg";
import IconSearch from "@/assets/icons/IconSearch.svg";
import IconSunHigh from "@/assets/icons/IconSunHigh.svg";
import IconArchive from "@/assets/icons/IconArchive.svg";
import IconMenuDeep from "@/assets/icons/IconMenuDeep.svg";
import LinkButton from "./LinkButton.astro";
import LanguagePicker from "./LanguagePicker.astro";
import { SITE } from "@/config";

const { pathname } = Astro.url;

// Remove trailing slash from current pathname if exists
const currentPath =
  pathname.endsWith("/") && pathname !== "/" ? pathname.slice(0, -1) : pathname;

function isActive(path) {
  const currentPathArray = currentPath.split("/").filter(p => p.trim());
  const pathArray = path.split("/").filter(p => p.trim());

  // Compare paths, accounting for language prefix
  // For example: /en/posts should match /posts
  const currentPagePath = currentPathArray.slice(1); // Remove language code
  const checkPagePath = pathArray.slice(0); // The path to check

  if (
    currentPagePath.length === 0 &&
    checkPagePath.length === 1 &&
    checkPagePath[0] === "posts"
  ) {
    // Homepage (after language code) against /posts link
    return false;
  }

  return (
    currentPath === `/${Astro.currentLocale}${path}` ||
    currentPath === `/${Astro.currentLocale}${path}/` ||
    currentPagePath[0] === checkPagePath[0]
  );
}
---

<header>
  <a
    id="skip-to-content"
    href="#main-content"
    class="visually-hidden focus:absolute focus:start-4 focus:top-4 focus:z-50 focus:bg-background focus:p-3 focus:text-accent"
  >
    Skip to content
  </a>

  <!-- Centered container wrapper -->
  <div class="mx-auto flex w-full max-w-app items-center justify-between">
    <!-- Main navigation wrapper with improved spacing and border styling -->
    <nav
      id="top-nav-wrap"
      class="relative flex h-16 w-full items-center justify-between gap-4 border-b border-border bg-background px-4 transition-colors sm:px-6"
    >
      <!-- Logo/Brand: Positioned to the start (left) via flex justify-between parent -->
      <a
        href={`/${Astro.currentLocale}/`}
        class="shrink-0 rounded-md font-sans text-lg font-bold text-foreground no-underline transition-colors hover:text-accent focus:outline-none"
        title="Home"
      >
        {SITE.title}
      </a>

      <!-- Navigation menu wrapper: Positioned to the end (right) via justify-between -->
      <div id="nav-menu" class="flex items-center gap-1 sm:gap-4">
        <!-- Mobile Menu Button (Hamburger) - hidden on sm and larger screens -->
        <button
          id="menu-btn"
          class="rounded-md p-2 text-foreground transition-colors hover:text-accent focus:outline-none sm:hidden"
          aria-label="Open Menu"
          aria-expanded="false"
          aria-controls="menu-items"
        >
          <IconMenuDeep id="menu-icon" class="size-6" />
          <IconX id="close-icon" class="hidden size-6" />
        </button>

        <!-- Navigation menu items - transforms into mobile overlay on small screens -->
        <ul
          id="menu-items"
          class="absolute top-16 right-0 left-0 z-40 hidden flex-col items-center gap-3 border-b border-border bg-background p-4 shadow-md sm:relative sm:top-0 sm:flex sm:flex-row sm:border-none sm:bg-transparent sm:p-0 sm:shadow-none"
        >
          <li>
            <!-- MODIFIED FOR SYMMETRY: Added flex, items-center, h-8 and removed vertical padding -->
            <a
              href={`/${Astro.currentLocale}/posts`}
              class:list={{
                "active-nav text-accent": isActive("/posts"),
              }}
              class="flex h-8 items-center rounded px-2 font-sans text-sm font-medium text-foreground no-underline transition-colors hover:text-accent focus:outline-none"
            >
              Posts
            </a>
          </li>
          <li>
            <!-- MODIFIED FOR SYMMETRY: Added flex, items-center, h-8 and removed vertical padding -->
            <a
              href={`/${Astro.currentLocale}/tags`}
              class:list={{
                "active-nav text-accent": isActive("/tags"),
              }}
              class="flex h-8 items-center rounded px-2 font-sans text-sm font-medium text-foreground no-underline transition-colors hover:text-accent focus:outline-none"
            >
              Tags
            </a>
          </li>
          {
            SITE.showArchives && (
              <li>
                <LinkButton
                  href={`/${Astro.currentLocale}/archives`}
                  class:list={[
                    "flex items-center justify-center rounded-md p-1.5 text-foreground transition-colors hover:text-accent focus:outline-none",
                    { "active-nav text-accent": isActive("/archives") },
                  ]}
                  ariaLabel="archives"
                  title="Archives"
                >
                  <IconArchive class="size-5" />
                  <span class="sr-only">Archives</span>
                </LinkButton>
              </li>
            )
          }
          <li>
            <LinkButton
              href={`/${Astro.currentLocale}/search`}
              class:list={[
                "flex items-center justify-center rounded-md p-1.5 text-foreground transition-colors hover:text-accent focus:outline-none",
                { "active-nav text-accent": isActive("/search") },
              ]}
              ariaLabel="search"
              title="Search"
            >
              <IconSearch class="size-5" />
              <span class="sr-only">Search</span>
            </LinkButton>
          </li>
          {
            SITE.lightAndDarkMode && (
              <li>
                <button
                  id="theme-btn"
                  class="inline-flex items-center justify-center rounded-md p-1.5 text-foreground transition-colors hover:text-accent focus:outline-none"
                  title="Toggle light & dark theme"
                  aria-label="Toggle theme"
                  aria-live="polite"
                >
                  <IconMoon class="hidden size-5 dark:block" />
                  <IconSunHigh class="size-5 dark:hidden" />
                </button>
              </li>
            )
          }
          <li>
            <LanguagePicker />
          </li>
        </ul>
      </div>
    </nav>
  </div>
</header>

<script lang="ts" is:inline>
  function setupNavigation() {
    const menuBtn = document.querySelector("#menu-btn");
    const menuItems = document.querySelector("#menu-items");
    const menuIcon = document.querySelector("#menu-icon");
    const closeIcon = document.querySelector("#close-icon");

    if (!menuBtn || !menuItems || !menuIcon || !closeIcon) return;

    const toggleMenu = () => {
      const isOpen = menuBtn.getAttribute("aria-expanded") === "true";
      const newState = !isOpen;

      menuBtn.setAttribute("aria-expanded", String(newState));
      menuBtn.setAttribute("aria-label", newState ? "Close Menu" : "Open Menu");

      menuItems.classList.toggle("hidden", !newState);
      menuIcon.classList.toggle("hidden", newState);
      closeIcon.classList.toggle("hidden", !newState);
    };

    menuBtn.addEventListener("click", toggleMenu);

    // Close menu when a navigation item is clicked
    const navLinks = menuItems.querySelectorAll("a");
    navLinks.forEach(link => {
      link.addEventListener("click", () => {
        if (menuBtn.getAttribute("aria-expanded") === "true") {
          toggleMenu();
        }
      });
    });
  }

  // Initialize on page load
  setupNavigation();

  // Reinitialize on view transitions
  document.addEventListener("astro:after-swap", setupNavigation);
</script>

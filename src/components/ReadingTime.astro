---
// REFACTORED: Removed calculation logic - now a pure presentational component.
import IconClock from "@/assets/icons/IconClock.svg";

// REFACTORED: The Props interface is now much simpler.
// It asks for the final `text` to display, not the raw `content` to process.
export interface Props {
  text: string;
  class?: string;
  size?: "sm" | "lg";
}

const {
  text,
  size = "sm",
  class: className = "",
} = Astro.props;
---

{/*
  REFACTORED: The parent div now handles the text sizing to avoid repetition (DRY).
  The component is now much cleaner and more declarative.
*/}
<div
  class:list={[
    "reading-time metadata",
    size === "sm" ? "text-sm" : "sm:text-base",
    className,
  ]}
>
  <IconClock
    class:list={["inline-block size-5 min-w-5", { "scale-90": size === "sm" }]}
  />
  <span>{text}</span>
</div>

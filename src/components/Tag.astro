---
import IconHash from "@/assets/icons/IconHash.svg";

export interface Props {
  tag: string;
  tagName: string;
  size?: "sm" | "lg";
}

const { tag, tagName, size = "sm" } = Astro.props;

// REFACTORED: Centralize all style variations into a single object.
// This is now the single source of truth for styling.
const styles = {
  li: [
    "group inline-block",
    size === "sm" ? "my-1 underline-offset-4" : "mx-1 my-3 underline-offset-8",
  ],
  a: [
    "relative flex items-center group-hover:-top-0.5 group-hover:text-accent focus-visible:p-1 focus-visible:no-underline",
    size === "sm" ? "text-sm" : "text-lg",
  ],
  icon: [
    "inline-block opacity-80",
    size === "sm" ? "-me-1.5 size-4" : "-me-2 size-6",
  ],
};
---

<li class:list={styles.li}>
  <a
    href={`/${Astro.currentLocale}/tags/${tag}/`}
    transition:name={tag}
    class:list={styles.a}
  >
    <IconHash class:list={styles.icon} />
    <span>{tagName}</span>
  </a>
</li>

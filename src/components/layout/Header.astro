---
// REFACTORED: Header.astro is now a clean, high-level conductor.

import { SITE } from "@/config";
import MobileMenu from "./MobileMenu.astro";
import type { LanguageLink } from "../features/LanguagePicker.astro";
import { getRelativeLocaleUrl } from "astro:i18n";
import { getI18n, type Lang } from "@/i18n";

const { pathname } = Astro.url;
const { t } = getI18n(Astro.currentLocale as Lang);

// V START: Add the i18n logic here
const allLanguages = [
  { code: "en", name: "English" },
  { code: "ka", name: "ქართული" },
] as const;

// Logic to generate the links for the other languages
const otherLanguageLinks: LanguageLink[] = allLanguages
  .filter(lang => lang.code !== Astro.currentLocale)
  .map(lang => {
    // We need the path without the locale prefix
    const path = pathname.replace(`/${Astro.currentLocale}`, "");
    return {
      code: lang.code,
      name: lang.name,
      url: getRelativeLocaleUrl(lang.code, path),
    };
  });
// V END
---

<header>
  <a
    id="skip-to-content"
    href="#main-content"
    class="visually-hidden focus:absolute focus:start-4 focus:top-4 focus:z-50 focus:bg-background focus:p-3 focus:text-accent"
  >
    {t("nav.skipToContent")}
  </a>

  <div class="mx-auto flex w-full max-w-app items-center justify-between px-4">
    <nav
      class="relative flex h-16 w-full items-center justify-between gap-4 border-transparent bg-transparent transition-colors"
    >
      <a
        href={`/${Astro.currentLocale}/`}
        class="shrink-0 rounded-md font-sans text-lg font-bold text-foreground no-underline transition-colors hover:text-accent focus:outline-none"
        title={t("nav.home")}
      >
        {SITE.title}
      </a>

      <div class="flex items-center gap-1 sm:gap-4">
        <!-- Mobile Menu Component -->
        <MobileMenu
          currentPath={pathname}
          locale={Astro.currentLocale}
          otherLanguageLinks={otherLanguageLinks}
        />
      </div>
    </nav>
  </div>
</header>

---
/**
 * LocaleBadge Component
 *
 * Displays a badge indicating when content is only available
 * in a specific language (used for fallback posts).
 */
import { getI18n, type Lang } from "@/i18n";

export interface Props {
  /** The original locale of the content */
  locale: Lang;
  class?: string;
}

const { locale: _originalLocale, class: className = "" } = Astro.props;

// Get translations for current locale
const { t } = getI18n(Astro.currentLocale as Lang);
---

<span
  class:list={[
    "inline-flex items-center gap-1 rounded-full px-2 py-0.5",
    "text-xs font-medium",
    "bg-amber-100 text-amber-800 dark:bg-amber-900/30 dark:text-amber-200",
    className,
  ]}
  role="status"
  aria-label={t("post.englishOnly")}
>
  <svg
    class="size-3"
    viewBox="0 0 20 20"
    fill="currentColor"
    aria-hidden="true"
  >
    <path
      fill-rule="evenodd"
      d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
      clip-rule="evenodd"></path>
  </svg>
  <span>{t("post.englishOnly")}</span>
</span>

---
import { render, type CollectionEntry } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import Tag from "@/components/post/Tag.astro";
import Datetime from "@/components/post/Datetime.astro";
import ReadingTime from "@/components/post/ReadingTime.astro";
import EditPost from "@/components/features/EditPost.astro";
import ShareLinks from "@/components/features/ShareLinks.astro";
import BackToTopButton from "@/components/features/BackToTopButton.astro";
import { slugifyStr } from "@/utils/core";
import { resolveOgImageUrl, getAdjacentPosts } from "@/utils/post";
import { getReadingTimeDisplay } from "@/utils/post"; // <-- ADD THIS IMPORT
import IconChevronLeft from "@/assets/icons/IconChevronLeft.svg";
import IconChevronRight from "@/assets/icons/IconChevronRight.svg";
import { SITE } from "@/config";
import katexStyles from "katex/dist/katex.min.css?url";
import { getI18n } from "@/i18n";

/**
 * Post Details Layout Component
 *
 * Specialized layout for blog post pages that extends the base Layout.
 * Provides:
 * - Post header with title, date, and reading time
 * - Article content rendering with proper styling
 * - Tag list and sharing options
 * - Previous/Next post navigation
 * - Edit post link (if enabled)
 * - Back to top button
 *
 * This layout nests the base Layout component following Astro's best practice
 * pattern for composable, reusable layouts.
 *
 * @example
 * ```astro
 * import PostDetails from '@/layouts/PostDetails.astro';
 * const { post, posts } = Astro.props;
 *
 * <PostDetails {post} {posts} />
 * ```
 */

export interface Props {
  /** Blog post entry from content collection */
  post: CollectionEntry<"blog">;
  /** All blog posts for adjacent post navigation */
  posts: CollectionEntry<"blog">[];
}

const { post, posts } = Astro.props;

const {
  title,
  author,
  description,
  ogImage: initOgImage,
  canonicalURL,
  pubDatetime,
  modDatetime,
  timezone,
  tags,
  hideEditPost,
} = post.data;

const { Content } = await render(post);

// Get content as plain text for reading time calculation
// The body contains the raw markdown content which is perfect for word counting
const bodyContent = post.body || "";

// V START: Add this new logic line
// The calculation logic now lives here, in the "smart" parent component.
const readingTimeText = getReadingTimeDisplay(bodyContent);
// V END

// Resolve OG image URL using centralized utility
// Handles string URLs, asset objects, and dynamic OG images
const ogImage = resolveOgImageUrl(initOgImage, post.slug, Astro.url.origin);

const layoutProps = {
  title: `${title} | ${SITE.title}`,
  author,
  description,
  pubDatetime,
  modDatetime,
  canonicalURL,
  ogImage,
  scrollSmooth: true,
};

// V START: Add this new logic block
const editPostConfig = SITE.editPost;
const editPostHref = `${editPostConfig.url}${post.filePath}`;
const showEditPost =
  editPostConfig.enabled && !hideEditPost && editPostConfig.url;
// V END

// REFACTORED: Moved copyright logic from Footer to parent layout
const { t, tTag } = getI18n(Astro.currentLocale as "en" | "ka" | undefined);
const currentYear = new Date().getFullYear();
const copyrightText = `Copyright © ${currentYear} • ${t("footer.copyright")}`;

// Get adjacent posts for navigation using centralized utility
const { previous: prevPost, next: nextPost } = getAdjacentPosts(posts, post.id);
---

<Layout {...layoutProps}>
  <!-- Defer KaTeX CSS to prevent render-blocking -->
  <link
    slot="head"
    rel="stylesheet"
    href={katexStyles}
    media="print"
    onload="this.media='all'"
  />
  <noscript slot="head"><link rel="stylesheet" href={katexStyles} /></noscript>
  <Header />
  <main
    id="main-content"
    class:list={[
      "mx-auto w-full max-w-app px-4 pb-12",
      { "mt-8": !SITE.showBackButton },
    ]}
    data-pagefind-body
  >
    <!-- <BackButton /> -->
    <h1
      transition:name={slugifyStr(title)}
      class="inline-block text-2xl font-bold text-accent sm:text-3xl"
      data-testid="post-title"
    >
      {title}
    </h1>
    <div
      class="my-4 flex flex-col items-start gap-y-2 text-sm text-text-secondary sm:flex-row sm:items-center sm:justify-between sm:text-base"
    >
      {/* Left Side: This will stay on the left */}
      <Datetime
        {pubDatetime}
        {modDatetime}
        {timezone}
        size="lg"
        data-testid="post-datetime"
      />

      {/* Right Side: This group will be pushed to the right on desktop */}
      <div class="flex items-center gap-x-4">
        <ReadingTime text={readingTimeText} size="lg" />
        {/* REFACTORED: The conditional is now here, in the parent */}
        {
          showEditPost && (
            <EditPost
              href={editPostHref}
              text={editPostConfig.text}
              class="max-sm:hidden"
            />
          )
        }
      </div>
    </div>
    <article
      id="article"
      class="app-prose mx-auto mt-8 max-w-app prose-pre:bg-(--shiki-light-bg) dark:prose-pre:bg-(--shiki-dark-bg)"
      data-testid="post-content"
    >
      <Content />
    </article>

    <hr class="my-8 border-dashed" />

    {/* REFACTORED: Also update the mobile version of the component call */}
    {
      showEditPost && (
        <EditPost
          href={editPostHref}
          text={editPostConfig.text}
          class="sm:hidden"
        />
      )
    }

    <ul class="mt-4 mb-8 sm:my-8">
      {
        tags.map((tag: string) => (
          <Tag tag={slugifyStr(tag)} tagName={tTag(tag)} />
        ))
      }
    </ul>

    <BackToTopButton />

    <ShareLinks />

    <hr class="my-6 border-dashed" />

    <!-- Previous/Next Post Buttons -->
    <div data-pagefind-ignore class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      {
        prevPost && (
          <a
            href={`/${Astro.currentLocale}/posts/${String(prevPost.id).split("/").slice(-1)[0]}`}
            class="flex w-full gap-1 hover:opacity-75"
          >
            <IconChevronLeft class="inline-block flex-none rtl:rotate-180" />
            <div>
              <span>Previous Post</span>
              <div class="text-sm text-accent/85">{prevPost.title}</div>
            </div>
          </a>
        )
      }
      {
        nextPost && (
          <a
            href={`/${Astro.currentLocale}/posts/${String(nextPost.id).split("/").slice(-1)[0]}`}
            class="flex w-full justify-end gap-1 text-end hover:opacity-75 sm:col-start-2"
          >
            <div>
              <span>Next Post</span>
              <div class="text-sm text-accent/85">{nextPost.title}</div>
            </div>
            <IconChevronRight class="inline-block flex-none rtl:rotate-180" />
          </a>
        )
      }
    </div>
  </main>
  <Footer copyrightText={copyrightText} />
</Layout>

<script>
  import { featureManager } from "@/utils/features/FeatureManager";

  /**
   * Initialize all post detail features
   * Called on page load and after navigation transitions
   *
   * Features initialized:
   * - Progress bar: Shows scroll position with visual indicator
   * - Heading links: Adds clickable anchors to headings
   * - Copy buttons: Adds copy-to-clipboard buttons to code blocks
   */
  function initializePostFeatures(): void {
    featureManager.initializeFeatures();
  }

  /**
   * Clean up all post detail features
   * Called before navigation transitions to prevent memory leaks
   */
  function cleanupPostFeatures(): void {
    featureManager.cleanupFeatures();
  }

  // Initialize features when page loads
  // Runs on first page visit
  document.addEventListener("astro:page-load", initializePostFeatures);

  // Re-initialize features after navigation
  // Astro View Transitions uses this event after swapping page content
  // Ensures features work with newly added elements
  document.addEventListener("astro:after-swap", () => {
    initializePostFeatures();
    // Go to page start after page swap
    window.scrollTo({ left: 0, top: 0, behavior: "instant" });
  });

  // Clean up features before navigation
  // Prevents memory leaks and conflicts during page transitions
  document.addEventListener("astro:before-swap", cleanupPostFeatures);
</script>

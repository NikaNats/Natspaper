---
import { PostRepository } from "@/utils/post/repository";
import type { GetStaticPathsOptions } from "astro";
import { getLastPathSegment } from "@/utils/core/slugify";
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import PostSummaryCard from "@/components/post/PostSummaryCard.astro";
import Pagination from "@/components/ui/Pagination.astro";
import { getUniqueTags, getPostsByTag } from "@/utils/post";
import { SITE, FEATURES } from "@/config";
import { SUPPORTED_LANGS } from "@/i18n/config";
import type { Lang } from "@/i18n";

// Localized page content
const pageContentByLocale: Record<
  Lang,
  {
    tagPrefix: string;
    desc: (tagName: string) => string;
    title: (tagName: string) => string;
  }
> = {
  en: {
    tagPrefix: "Tag:",
    desc: (tagName: string) => `All the articles with the tag "${tagName}".`,
    title: (tagName: string) => `Tag: ${tagName} | ${SITE.title}`,
  },
  ka: {
    tagPrefix: "თეგი:",
    desc: (tagName: string) => `ყველა სტატია თეგით "${tagName}".`,
    title: (tagName: string) => `თეგი: ${tagName} | ${SITE.title}`,
  },
};

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const paths = [];

  // Generate paths for all supported locales
  for (const locale of SUPPORTED_LANGS) {
    const posts = await PostRepository.getByLocale(locale as Lang);
    // Pass locale to get translated tag names
    const tags = getUniqueTags(posts, locale as Lang);

    const localePaths = tags.flatMap(({ tag, tagName }) => {
      const tagPosts = getPostsByTag(posts, tag);

      return paginate(tagPosts, {
        params: { locale, tag },
        props: { tagName, locale },
        pageSize: FEATURES.postPerPage,
      });
    });

    paths.push(...localePaths);
  }

  return paths;
}

const params = Astro.params;
const { tag } = params;
const { page, tagName, locale } = Astro.props;
const pageContent = pageContentByLocale[locale as Lang];
---

<Layout title={pageContent.title(tagName)}>
  <Header />
  <Main
    pageTitle={[`${pageContent.tagPrefix}`, `${tagName}`]}
    titleTransition={tag}
    pageDesc={pageContent.desc(tagName)}
  >
    <h1
      slot="title"
      class="main-heading"
      transition:name={tag}
      data-testid="tag-archive-title"
    >
      {`${pageContent.tagPrefix}${tag}`}
    </h1>
    <ul class="space-y-6">
      {
        page.data
          .filter(item => item !== undefined)
          .map(({ data, slug }) => (
            <PostSummaryCard
              title={data.title}
              description={data.description}
              pubDatetime={data.pubDatetime}
              modDatetime={data.modDatetime}
              timezone={data.timezone}
              slug={getLastPathSegment(slug)}
            />
          ))
      }
    </ul>
  </Main>

  <Pagination
    currentPage={page.currentPage}
    totalPages={page.lastPage}
    prevUrl={page.url.prev}
    nextUrl={page.url.next}
  />

  <Footer noMarginTop={page.lastPage > 1} />
</Layout>

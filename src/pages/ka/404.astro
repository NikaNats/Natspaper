---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import LinkButton from "@/components/ui/LinkButton.astro";
import { SITE } from "@/config";
---

<Layout title={`404 ვერ მოიძებნა | ${SITE.title}`}>
  <Header />

  <main
    id="main-content"
    class="mx-auto flex max-w-app flex-1 items-center justify-center"
  >
    <div class="mb-14 flex flex-col items-center justify-center">
      <!-- CHANGED: Applied same fluid typography fix for consistency across languages -->
      <h1 class="text-fluid-6xl font-bold text-accent">404</h1>
      <span aria-hidden="true" class="text-xl">¯\_(ツ)_/¯</span>
      <p class="mt-4 text-2xl sm:text-3xl">გვერდი ვერ მოიძებნა</p>
      <LinkButton
        href="/ka/"
        class="my-6 text-lg underline decoration-dashed underline-offset-8"
      >
        მთავარ გვერდზე დაბრუნება
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>

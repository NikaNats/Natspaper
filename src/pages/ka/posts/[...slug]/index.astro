---
import { type CollectionEntry, getCollection } from "astro:content";
import PostDetails from "@/layouts/PostDetails.astro";
import getSortedPosts from "@/utils/getSortedPosts";

export interface Props {
  post: CollectionEntry<"blog">;
}

export async function getStaticPaths() {
  const allPosts = await getCollection("blog", ({ data }) => !data.draft);
  // Filter posts for Georgian language
  const posts = allPosts.filter(post => post.slug.startsWith('ka/'));
  const postResult: Array<{
    params: { slug: string };
    props: { post: CollectionEntry<"blog"> };
  }> = [];

  // Add only the clean slug paths (catch route handles .md redirects)
  for (const post of posts) {
    postResult.push({
      params: { slug: post.slug.split("/").slice(-1)[0] },
      props: { post },
    });
  }

  return postResult;
}

const { post } = Astro.props;

const allPosts = await getCollection("blog");
// Filter posts for Georgian language
const kaPosts = allPosts.filter(post => post.slug.startsWith('ka/'));
const sortedPosts = getSortedPosts(kaPosts);
---

<PostDetails post={post} posts={sortedPosts} />

{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "pagefind.d.ts", "**/*"],
  "exclude": ["dist", "public/pagefind", "coverage", ".astro"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"]
    },
    "verbatimModuleSyntax": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true
  }
}
